---
import Layout from "../layouts/Layout.astro";
import ProfileCard from "../components/ProfileCard.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import SkillsCard from "../components/SkillsCard.astro";
import StatusCard from "../components/StatusCard.astro";
import ContactCard from "../components/ContactCard.astro";
import ProjectsCard from "../components/ProjectsCard.astro";
import InternshipCard from "../components/InternshipCard.astro";
---

<Layout title="Judicael - Portfolio">
	<!-- Main Wrapper -->
	<div class="max-w-6xl mx-auto px-4 py-8 md:py-16">
		<!-- GRID HERO SECTION -->
		<div
			class="grid grid-cols-1 md:grid-cols-4 md:grid-rows-3 gap-5 h-auto md:h-[800px] mb-24"
		>
			<ProfileCard />
			<InternshipCard />
			<ThemeToggle />
			<StatusCard />
			<SkillsCard />
			<ContactCard />
			<ProjectsCard />
		</div>

		<!-- DETAILED SCROLL SECTIONS -->

		<!-- Projects Section -->
		<section
			id="projects-detail"
			class="py-20 opacity-0 transition-opacity duration-1000 translate-y-10 scroll-reveal"
		>
			<div class="flex items-end gap-4 mb-12">
				<h2
					class="text-6xl md:text-8xl font-serif font-bold text-slate-200 dark:text-slate-800 select-none absolute -z-10"
				>
					WORKS
				</h2>
				<h2 class="text-3xl md:text-4xl font-bold pl-2">
					Featured Projects
				</h2>
				<div class="h-px bg-slate-300 flex-grow mb-4 ml-4"></div>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				<!-- Project 1 -->
				<div
					class="group bg-white dark:bg-slate-800 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border border-slate-100 dark:border-slate-700"
				>
					<div
						class="h-64 bg-gradient-to-br from-purple-100 to-blue-100 dark:from-slate-700 dark:to-slate-600 p-8 flex items-center justify-center group-hover:scale-105 transition-transform duration-500"
					>
						<i class="fas fa-brain text-6xl text-slate-300"></i>
					</div>
					<div class="p-8">
						<div class="flex justify-between items-start mb-4">
							<div>
								<h3 class="text-2xl font-bold mb-1">
									TensorFlow ML Model
								</h3>
								<p
									class="text-sm text-slate-500 dark:text-slate-400"
								>
									Python • TensorFlow • Pandas
								</p>
							</div>
							<a
								href="#"
								class="w-10 h-10 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center hover:bg-slate-900 hover:text-white transition-colors"
							>
								<i class="fas fa-arrow-right"></i>
							</a>
						</div>
						<p class="text-slate-600 dark:text-slate-300">
							A machine learning model capable of predicting
							housing prices with 95% accuracy using historical
							data.
						</p>
					</div>
				</div>

				<!-- Project 2 -->
				<div
					class="group bg-white dark:bg-slate-800 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border border-slate-100 dark:border-slate-700"
				>
					<div
						class="h-64 bg-gradient-to-br from-orange-100 to-red-100 dark:from-slate-700 dark:to-slate-600 p-8 flex items-center justify-center group-hover:scale-105 transition-transform duration-500"
					>
						<i class="fas fa-mobile-alt text-6xl text-slate-300"
						></i>
					</div>
					<div class="p-8">
						<div class="flex justify-between items-start mb-4">
							<div>
								<h3 class="text-2xl font-bold mb-1">
									E-Commerce App
								</h3>
								<p
									class="text-sm text-slate-500 dark:text-slate-400"
								>
									React Native • Firebase
								</p>
							</div>
							<a
								href="#"
								class="w-10 h-10 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center hover:bg-slate-900 hover:text-white transition-colors"
							>
								<i class="fas fa-arrow-right"></i>
							</a>
						</div>
						<p class="text-slate-600 dark:text-slate-300">
							Full-featured mobile shopping application with
							real-time inventory and secure payment gateway.
						</p>
					</div>
				</div>

				<!-- Project 3 -->
				<div
					class="group bg-white dark:bg-slate-800 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 border border-slate-100 dark:border-slate-700"
				>
					<div
						class="h-64 bg-slate-100 dark:bg-slate-700 relative overflow-hidden group-hover:scale-105 transition-transform duration-500"
					>
						<img
							src="/sophro.png"
							alt="Sophrology Website Demo"
							class="w-full h-full object-cover"
						/>
					</div>
					<div class="p-8">
						<div class="flex justify-between items-start mb-4">
							<div>
								<h3 class="text-2xl font-bold mb-1">
									Sophrology Website
								</h3>
								<p
									class="text-sm text-slate-500 dark:text-slate-400"
								>
									Astro • Tailwind CSS
								</p>
							</div>
							<a
								href="#"
								class="w-10 h-10 rounded-full bg-slate-100 dark:bg-slate-700 flex items-center justify-center hover:bg-slate-900 hover:text-white transition-colors"
							>
								<i class="fas fa-arrow-right"></i>
							</a>
						</div>
						<p class="text-slate-600 dark:text-slate-300">
							A modern and serene website for a sophrology
							practitioner, featuring appointment booking and blog
							integration.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- About / Skills Detail Section -->
		<section
			id="skills-detail"
			class="py-20 opacity-0 transition-opacity duration-1000 translate-y-10 scroll-reveal"
		>
			<div
				class="bg-slate-900 text-white rounded-3xl p-8 md:p-16 relative overflow-hidden"
			>
				<div
					class="absolute top-0 right-0 w-64 h-64 bg-purple-500 rounded-full blur-3xl opacity-20 -translate-y-1/2 translate-x-1/3"
				>
				</div>
				<div
					class="absolute bottom-0 left-0 w-64 h-64 bg-blue-500 rounded-full blur-3xl opacity-20 translate-y-1/2 -translate-x-1/3"
				>
				</div>

				<div
					class="relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12"
				>
					<div>
						<h2
							class="text-3xl md:text-5xl font-serif font-bold mb-6"
						>
							My Digital Toolbox
						</h2>
						<p class="text-slate-300 text-lg leading-relaxed mb-8">
							I believe in choosing the right tool for the job.
							While I specialize in Python and C for backend
							logic, I love crafting beautiful interfaces with
							modern web technologies.
						</p>
						<button
							class="bg-white text-black px-6 py-3 rounded-full font-bold hover:bg-slate-200 transition-colors"
						>
							Download CV
						</button>
					</div>
					<div class="grid grid-cols-2 gap-4">
						<div
							class="bg-white/10 p-6 rounded-2xl backdrop-blur-sm"
						>
							<i
								class="fab fa-python text-4xl text-yellow-300 mb-4"
							></i>
							<h4 class="font-bold text-xl">Python</h4>
							<p class="text-sm text-slate-400">
								Advanced Data Analysis
							</p>
						</div>
						<div
							class="bg-white/10 p-6 rounded-2xl backdrop-blur-sm"
						>
							<i class="fas fa-code text-4xl text-blue-300 mb-4"
							></i>
							<h4 class="font-bold text-xl">C / C++</h4>
							<p class="text-sm text-slate-400">
								System Programming
							</p>
						</div>
						<div
							class="bg-white/10 p-6 rounded-2xl backdrop-blur-sm"
						>
							<i class="fab fa-figma text-4xl text-pink-300 mb-4"
							></i>
							<h4 class="font-bold text-xl">Design</h4>
							<p class="text-sm text-slate-400">
								UI/UX Prototyping
							</p>
						</div>
						<div
							class="bg-white/10 p-6 rounded-2xl backdrop-blur-sm"
						>
							<i
								class="fas fa-server text-4xl text-green-300 mb-4"
							></i>
							<h4 class="font-bold text-xl">Backend</h4>
							<p class="text-sm text-slate-400">SQL & APIs</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section
			id="contact-detail"
			class="py-20 opacity-0 transition-opacity duration-1000 translate-y-10 scroll-reveal"
		>
			<div
				class="bg-peach-100 dark:bg-slate-800 rounded-3xl p-8 md:p-12 border border-orange-200 dark:border-slate-700"
			>
				<div class="text-center max-w-2xl mx-auto mb-10">
					<h2 class="text-3xl md:text-4xl font-bold mb-4">
						Ready to start a project?
					</h2>
					<p class="text-slate-600 dark:text-slate-300">
						Whether you have a question or just want to say hi, I'll
						try my best to get back to you!
					</p>
				</div>

				<form class="max-w-lg mx-auto space-y-4">
					<div class="grid grid-cols-2 gap-4">
						<input
							type="text"
							placeholder="Name"
							class="w-full p-4 rounded-xl bg-white dark:bg-slate-900 border-none focus:ring-2 focus:ring-orange-400 outline-none transition-all"
						/>
						<input
							type="email"
							placeholder="Email"
							class="w-full p-4 rounded-xl bg-white dark:bg-slate-900 border-none focus:ring-2 focus:ring-orange-400 outline-none transition-all"
						/>
					</div>
					<input
						type="text"
						placeholder="Subject"
						class="w-full p-4 rounded-xl bg-white dark:bg-slate-900 border-none focus:ring-2 focus:ring-orange-400 outline-none transition-all"
					/>
					<textarea
						rows="4"
						placeholder="Message"
						class="w-full p-4 rounded-xl bg-white dark:bg-slate-900 border-none focus:ring-2 focus:ring-orange-400 outline-none transition-all"
					></textarea>
					<button
						type="button"
						class="w-full bg-slate-900 dark:bg-orange-500 text-white font-bold py-4 rounded-xl hover:opacity-90 transition-opacity"
					>
						Send Message
					</button>
				</form>
			</div>
		</section>

		<!-- Footer -->
		<footer class="text-center text-slate-400 text-sm py-8 mt-8">
			<p>
				© 2024 • Crafted with <span class="text-red-500">❤</span> by Judicael
			</p>
		</footer>
	</div>
</Layout>

<script is:inline>
	// Smooth Scroll Helper
	window.scrollToSection = function (id) {
		const element = document.getElementById(id);
		if (element) {
			element.scrollIntoView({ behavior: "smooth" });
		}
	};

	// Scroll Observer for Fade-in Animations
	const observerOptions = {
		root: null,
		rootMargin: "0px",
		threshold: 0.1,
	};

	const observer = new IntersectionObserver((entries, observer) => {
		entries.forEach((entry) => {
			if (entry.isIntersecting) {
				entry.target.classList.remove("opacity-0", "translate-y-10");
				observer.unobserve(entry.target);
			}
		});
	}, observerOptions);

	document.querySelectorAll(".scroll-reveal").forEach((section) => {
		observer.observe(section);
	});
</script>
