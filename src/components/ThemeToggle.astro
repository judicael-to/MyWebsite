<div
    class="glass-card col-span-1 md:col-span-1 md:row-span-1 bg-sky-100 dark:bg-sky-900/40 rounded-3xl p-6 opacity-0 animate-drop-bounce delay-200 flex flex-col justify-center items-center text-center relative overflow-hidden"
>
    <div class="absolute top-4 right-4">
        <i
            class="fas fa-cog text-sky-900/20 dark:text-sky-100/20 text-6xl rotate-45"
        ></i>
    </div>
    <p
        class="text-sm font-semibold uppercase tracking-wider text-sky-900 dark:text-sky-100 mb-4"
    >
        Settings
    </p>

    <!-- Dark Mode Toggle -->
    <button
        id="theme-toggle"
        class="relative w-full h-10 bg-white/50 dark:bg-black/30 rounded-full p-1 flex items-center cursor-pointer"
    >
        <div
            class="absolute top-1 bottom-1 left-1 w-[calc(50%-4px)] bg-sky-300 dark:bg-sky-800 rounded-full shadow-sm transition-transform duration-300"
            id="toggle-circle"
        >
        </div>
        <span class="flex-1 text-xs font-bold relative z-10 text-center"
            >Light</span
        >
        <span class="flex-1 text-xs font-bold relative z-10 text-center"
            >Dark</span
        >
    </button>

    <!-- Language Toggle -->
    <button
        id="lang-toggle"
        class="relative w-full h-10 bg-white/50 dark:bg-black/30 rounded-full p-1 flex items-center cursor-pointer mt-2"
    >
        <div
            class="absolute top-1 bottom-1 left-1 w-[calc(50%-4px)] bg-sky-300 dark:bg-sky-800 rounded-full shadow-sm transition-transform duration-300"
            id="lang-circle"
        >
        </div>
        <span class="flex-1 text-xs font-bold relative z-10 text-center"
            >EN</span
        >
        <span class="flex-1 text-xs font-bold relative z-10 text-center"
            >FR</span
        >
    </button>
</div>

<script>
    // Theme Toggle Logic
    const themeToggleBtn = document.getElementById("theme-toggle");
    const toggleCircle = document.getElementById("toggle-circle");
    const htmlElement = document.documentElement;

    // Initialize Theme State
    if (htmlElement.classList.contains("dark")) {
        toggleCircle?.classList.add("translate-x-full");
    }

    themeToggleBtn?.addEventListener("click", () => {
        htmlElement.classList.toggle("dark");
        if (htmlElement.classList.contains("dark")) {
            localStorage.setItem("theme", "dark");
            toggleCircle?.classList.add("translate-x-full");
        } else {
            localStorage.setItem("theme", "light");
            toggleCircle?.classList.remove("translate-x-full");
        }
    });

    // Language Toggle Logic
    const langToggleBtn = document.getElementById("lang-toggle");
    const langCircle = document.getElementById("lang-circle");

    // Initialize Language State (Default EN)
    let currentLang = localStorage.getItem("lang") || "en";
    if (currentLang === "fr") {
        langCircle?.classList.add("translate-x-full");
    }

    langToggleBtn?.addEventListener("click", () => {
        if (currentLang === "en") {
            currentLang = "fr";
            langCircle?.classList.add("translate-x-full");
        } else {
            currentLang = "en";
            langCircle?.classList.remove("translate-x-full");
        }
        localStorage.setItem("lang", currentLang);
        // Here you would typically trigger a language change event or reload
        console.log("Language switched to:", currentLang);
    });
</script>
