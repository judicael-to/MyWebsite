---
import BasicLayout from "./BasicLayout.astro";
import "../styles/theme.css";

interface Props {
  title: string;
  description: string;
  page?: "travel";
}

const { title, description, page } = Astro.props;

try {
  // Your existing code here
} catch (error) {
  console.error('Error in Layout component:', error);
  // Fallback to a basic layout if there's an error
  return (
    <html>
      <head>
        <title>{title}</title>
        <meta name="description" content={description} />
      </head>
      <body>
        <div class="error-container">
          <h1>Something went wrong</h1>
          <p>Please try refreshing the page</p>
        </div>
      </body>
    </html>
  );
}
---

<BasicLayout title={title} description={description}>
  <div
    slot="loader"
    class="loader bg-darkslate-700 text-neutral-50 text-3xl font-black uppercase flex justify-center items-center w-screen h-screen z-50 fixed top-0 bottom-0 right-0 left-0"
  >
  </div>
  <slot />
</BasicLayout>

<style>
  .error-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
    padding: 2rem;
  }
</style>
